
type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  bio: String
  age: Int
  gender: GenderOptions
  contacts: [Contact!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum GenderOptions {
  MALE
  FEMALE
  OTHER
}

type Contact {
  id: ID! @id
  name: String!
  email: String
  phoneNumber: String
  jobTitle: String
  user: User!
  company: Company
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Company {
  id: ID! @id
  name: String!
  address: String
  phoneNumber: String
  website: String
  employees: [Contact!]!
  jobPostings: [JobPosting!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type JobPosting {
  id: ID! @id
  title: String!
  company: Company!
  link: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}